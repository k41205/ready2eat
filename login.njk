---
layout: general-layout.njk
---

<section class="login">
  <h1 class="login__title">Auth</h1>
  <form action="/food" class="login-form">
    <div class="login-form__wrapper">
      <label for="user" class="login-form__label">Username</label>
      <input type="text" id="user" class="login-form__input" required />
      <label for="psw" class="login-form__label">Password</label>
      <input type="password" id="psw" class="login-form__input" required />
      <input type="submit" value="Login" class="login-form__submit" />
    </div>
    <div class="login-form__wrapper">
      <p class="login-form__text">Not registered yet?</p>
      <a href="/signup" class="login-form__button">Sign up</a>
    </div>
  </form>
</section>
